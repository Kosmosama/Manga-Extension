{
  "manifest_version": 3,
  "name": "Manga Library",
  "description": "Bookmark for mangas/manhwas/manhuas extension",
  "version": "1.0",
  "permissions": [
      "tabs",
      "scripting",
      "storage",
      "webNavigation",
      "activeTab",
      "bookmarks"
  ],
  "action": {
      "default_popup": "src/index.html",
      "default_icon": "public/logos/icon.png"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": [
              "src/loadMangas.js",
              "src/storageHandler.js",
              "src/settingsBtn.js",
              "src/getRandom.js",
              "src/settingsSave.js",
              "src/searchBar.js",
              "src/menuFilter.js",
              "src/translations.js",
              "src/filter.js",
              "src/fav.js",
              "src/editManga.js",
              "src/domUtils.js",
              "src/deleteManga.js",
              "src/bookmarks.js",
              "src/addManga.js"
          ]
      }
  ],
  "web_accessible_resources": [
      {
          "resources": ["translations.json"],
          "matches": ["<all_urls>"]
      }
  ]
}
